{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"binaryDir": "${sourceDir}/Build/${presetName}"
		},
		{
			"name": "debug",
			"inherits": "base",
			"displayName": "Debug",
			"description": "Sets debug build type",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "release",
			"inherits": "debug",
			"displayName": "Release",
			"description": "Sets release build type",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "debug-vs2022",
			"inherits": "debug",
			"displayName": "Debug (VS 2022)",
			"description": "Sets debug build type and uses MSVC",
			"generator": "Visual Studio 17 2022",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "release-vs2022",
			"inherits": "debug-vs2022",
			"displayName": "Release (VS 2022)",
			"description": "Sets release build type and uses MSVC",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	],
	"buildPresets": [
		{
			"name": "verbose",
			"displayName": "Verbose Build",
			"description": "Passes -v to Ninja",
			"configurePreset": "debug",
			"nativeToolOptions": [
				"-v"
			]
		},
		{
			"name": "verbose-vs2022",
			"displayName": "Verbose Build",
			"description": "Passes /v:detailed to MSBuild. This is *very* verbose.",
			"configurePreset": "debug-vs2022",
			"nativeToolOptions": [
				"/v:detailed"
			]
		}
	]
}