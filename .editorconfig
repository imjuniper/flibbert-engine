# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 8
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{CMakeLists.txt,*.cmake,*.frag,*.vert,*.shader}]
indent_style = space
indent_size = 4
